{
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"incremental": true,
		"inlineSources": true,
		"jsx": "react",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"outDir": "dist/out",
		"pretty": true,
		"rootDir": "src",
		"sourceMap": true,
		"strict": true,
		"target": "ES2020",
		"types": ["@types/mocha"],
		"module": "Node16",
		"moduleResolution": "Node16",
	},
}
